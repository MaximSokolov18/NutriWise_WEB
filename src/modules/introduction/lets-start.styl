.lets-start {
    display: flex;

    &__content {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    &__figure {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    &__basket-img {
        margin-top: -150px;
    }

    &__question {
        font-family: Montserrat;
        font-size: 48px;
        font-weight: 400;
        line-height: 62.4px;
        letter-spacing: 10px;
        text-align: left;
        margin: 0;
    }

    &__suggest {
        font-family: Montserrat;
        font-size: 18px;
        font-weight: 400;
        line-height: 23.4px;
        letter-spacing: 3px;
        text-align: left;
    }

    &__lets-start-button {
        width: 305px;
    }
}