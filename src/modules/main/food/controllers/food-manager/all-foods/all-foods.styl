.all-foods {
	width: 505px;
	height: 581px;
	border-radius: 12px;
	border: solid 1px;
	background-color: #F6F1E9;
	padding: 25px;
	position: relative;

	&__header {
		margin-bottom: 20px;
	}

	&__search {
		width: 100%;
		margin-bottom: 20px;
	}

	&__title {
		font-family: Montserrat;
		font-size: 24px;
		font-weight: 500;
		line-height: 29.26px;
		text-align: left;
		margin: 0;
	}

	&__add-new-food {
		position: absolute;
		bottom: 12px;
		right: 12px;
	}

	&__result-search {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
	}
}